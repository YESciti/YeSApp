<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#1E88E5" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商城"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:visibility="visible" />

        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/buttonIcon"
            android:layout_width="60sp"
            android:layout_height="56sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:clickable="true"
            materialdesign:iconDrawable="@drawable/ic_action_arrow_left" >
        </com.gc.materialdesign.views.ButtonIcon>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#88CECECE" />



    </RelativeLayout>
    
    
<ScrollView     
         android:id="@+id/myscroll"      
         android:layout_width="match_parent"     
         android:layout_height="match_parent"
         android:layout_weight="1.0" > 

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical" >

     <RelativeLayout
         android:id="@+id/rela2"
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/button1"
         android:layout_marginTop="61dp" >

         <com.gc.materialdesign.views.LayoutRipple
             android:id="@+id/item_ecomm"
             android:layout_width="95sp"
             android:layout_height="69dp"
             android:layout_alignParentBottom="true"
             android:background="#FFF"
             android:clickable="true" >

             <ImageView
                 android:id="@+id/zuobian"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/food" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:text="@string/ecom" />
         </com.gc.materialdesign.views.LayoutRipple>

         <com.gc.materialdesign.views.LayoutRipple
             android:id="@+id/item_travel"
             android:layout_width="95sp"
             android:layout_height="69dp"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@+id/item_ecomm"
             android:background="#FFF"
             android:clickable="true" >

             <ImageView
                 android:id="@+id/imageView2"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/travel" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:text="@string/travel" />
         </com.gc.materialdesign.views.LayoutRipple>

         <com.gc.materialdesign.views.LayoutRipple
             android:id="@+id/item_taxi"
             android:layout_width="95sp"
             android:layout_height="69dp"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@+id/item_travel"
             android:background="#FFF"
             android:clickable="true" >

             <ImageView
                 android:id="@+id/imageView2"
                 android:layout_width="80dp"
                 android:layout_height="50dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/taxi" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:text="@string/taxi" />
         </com.gc.materialdesign.views.LayoutRipple>

         <com.gc.materialdesign.views.LayoutRipple
             android:id="@+id/itemSwitches"
             android:layout_width="95sp"
             android:layout_height="69dp"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@+id/item_taxi"
             android:background="#FFF"
             android:clickable="true" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:text="@string/hotel" />

             <ImageView
                 android:id="@+id/imageView2"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:src="@drawable/hotel" />
         </com.gc.materialdesign.views.LayoutRipple>
     </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

        <com.gc.materialdesign.views.LayoutRipple
              android:id="@+id/itemButtons1"
              android:layout_width="fill_parent"
              android:layout_height="207dp"
              android:background="#FFF"
              android:clickable="true" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            
            android:layout_centerInParent="true"
            android:src="@drawable/jingdong" />
        
    </com.gc.materialdesign.views.LayoutRipple>
 <com.gc.materialdesign.views.LayoutRipple
              android:id="@+id/itemButtons2"
              android:layout_width="fill_parent"
              android:layout_height="207dp"
              android:background="#FFF"
              android:clickable="true" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            
            android:layout_centerInParent="true"
            android:src="@drawable/gugong" />
        
    </com.gc.materialdesign.views.LayoutRipple>
     <com.gc.materialdesign.views.LayoutRipple
              android:id="@+id/itemButtons3"
              android:layout_width="fill_parent"
              android:layout_height="207dp"
              android:background="#FFF"
              android:clickable="true" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            
            android:layout_centerInParent="true"
            android:src="@drawable/jiuzhai" />
         <com.gc.materialdesign.views.LayoutRipple
              android:id="@+id/itemButtons2"
              android:layout_width="fill_parent"
              android:layout_height="207dp"
              android:background="#FFF"
              android:clickable="true" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            
            android:layout_centerInParent="true"
            android:src="@drawable/jiuzhai" />
        
    </com.gc.materialdesign.views.LayoutRipple>
        
    </com.gc.materialdesign.views.LayoutRipple>
</LinearLayout>
 </LinearLayout>
	</ScrollView>  
</RelativeLayout>