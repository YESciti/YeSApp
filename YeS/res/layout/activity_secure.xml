<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <com.gc.materialdesign.views.LayoutRipple
        android:background="#FFF"
        android:clickable="true" 
        android:id="@+id/rl_shenfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_shenfen"
        android:layout_centerVertical="true" 
        android:layout_below="@+id/rl_youxiang"
        
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/txt_shenfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:text="@string/txt_id"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edt_shenfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/txt_shenfen"
            android:ems="10"
            android:inputType="phone" />
   </com.gc.materialdesign.views.LayoutRipple>

 <com.gc.materialdesign.views.LayoutRipple
        android:background="#FFF"
        android:clickable="true" 
        android:id="@+id/rl_youxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_shenfen"
        android:layout_below="@+id/rl_shouji"
        android:layout_marginTop="2dp" >

        <TextView
            android:id="@+id/txt_youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:text="@string/youxiangshezhi"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/edt_youxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/txt_youxiang"
            android:ems="10"
            android:inputType="phone" >

            <requestFocus />
        </EditText>
    </com.gc.materialdesign.views.LayoutRipple>

     <com.gc.materialdesign.views.LayoutRipple
        android:background="#FFF"
        android:clickable="true" 
        android:id="@+id/rl_shouji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_youxiang"
        android:layout_alignParentTop="true" >

         <EditText
            android:id="@+id/edt_shouji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/txt_shouji"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/txt_shouji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edt_shouji"
            android:layout_alignLeft="@+id/img_shouji"
            android:layout_alignTop="@+id/edt_shouji"
            android:text="@string/txt_genghuanshouji"
            android:textSize="22sp" />

    </com.gc.materialdesign.views.LayoutRipple>

    <RelativeLayout
        android:id="@+id/rl_recode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_shenfen"
        android:layout_below="@+id/rl_shenfen"
        android:layout_marginTop="55dp" >
      </RelativeLayout>
    
      <RelativeLayout
        android:id="@+id/rl_anquanbaohu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rl_shenfen"
        android:layout_below="@+id/rl_recode"
        android:layout_marginTop="2dp" >
      </RelativeLayout>

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/btn_secure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_anquanbaohu"
       
        android:textSize="22sp" >
</com.gc.materialdesign.views.ButtonFlat>

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/btn_recode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/rl_recode"
        android:text="@string/txt_xiugaimima"
        android:textSize="18sp" >
    </com.gc.materialdesign.views.ButtonFlat>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_save_secure"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/btn_secure"
        android:layout_below="@+id/btn_secure"
        android:text="@string/sure"
        android:textSize="12sp" >
    </com.gc.materialdesign.views.ButtonRectangle>

</RelativeLayout>
