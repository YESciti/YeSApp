<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    
    
    
    
    
<com.gc.materialdesign.views.LayoutRipple   
       android:id="@+id/layout_touxiang"
       android:layout_width="match_parent"
       android:layout_height="120dip"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="#F4F4F4"
       android:clickable="true" >

      <ImageView
          android:id="@+id/faceimage"
          android:layout_width="100dip"
          android:layout_height="100dip"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="15dip"
          android:src="@drawable/icn_button" />

    </com.gc.materialdesign.views.LayoutRipple>

  <RelativeLayout
       android:id="@+id/layout_sex"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_alignLeft="@+id/layout_touxiang"
       android:background="#F4F4F4"
       android:layout_marginTop="5dip"
       android:layout_below="@+id/layout_place"
     
       >

        <TextView
            android:id="@+id/txt_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/xingbie"
            android:textSize="20sp" />

          <RadioGroup
              android:id="@+id/sex"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:orientation="horizontal" >

              <RadioButton
                  android:id="@+id/male"
                  android:text="男"
                  android:textSize="18sp" 
                   />

              <RadioButton
                  android:id="@+id/female"
                  android:text="女" 
                  android:textSize="18sp" 
                  />
          </RadioGroup>

   </RelativeLayout>
    
    <com.gc.materialdesign.views.LayoutRipple
       android:clickable="true"
       android:id="@+id/layout_place"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_alignLeft="@+id/layout_touxiang"
       android:background="#F4F4F4"
       android:layout_marginTop="5dip"
       android:layout_below="@+id/layout_nicheng">

        <TextView
            android:id="@+id/txt_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/diqu"
            android:textSize="20sp" />

        <EditText
              android:id="@+id/editText1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:ems="10" >

              <requestFocus />
          </EditText>
    </com.gc.materialdesign.views.LayoutRipple>

      <Button
          android:id="@+id/btn_edit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:text="@string/save" />

      <com.gc.materialdesign.views.LayoutRipple
          android:id="@+id/layout_nicheng"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginTop="5dp"
          android:layout_alignLeft="@+id/layout_name"
          android:layout_below="@+id/layout_name"
          android:background="#F4F4F4"
          android:clickable="true" >

          <TextView
              android:id="@+id/txt_place"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:text="@string/nicheng"
              android:textSize="20sp" />

          <EditText
              android:id="@+id/editText1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:ems="10" >

              <requestFocus />
          </EditText>
      </com.gc.materialdesign.views.LayoutRipple>

      <com.gc.materialdesign.views.LayoutRipple
          android:id="@+id/layout_name"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_alignLeft="@+id/layout_place"
          android:layout_below="@+id/layout_touxiang"
          android:layout_marginTop="40dp"
          android:background="#F4F4F4"
          android:clickable="true" >

          <TextView
              android:id="@+id/asd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:text="@string/yonghuming"
              android:textSize="20sp" />

          <EditText
              android:id="@+id/editText1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:ems="10" >

              <requestFocus />
          </EditText>
  </com.gc.materialdesign.views.LayoutRipple>
</RelativeLayout>
    

