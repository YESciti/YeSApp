<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2063ADD0"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_order"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#38B3DF" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="我的订单"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_dedao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="20dp"
            android:text="得到"
            android:textColor="#A8A8A8"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/lay_get"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/txt_dedao"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/us" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_askedit"
                android:ems="10"
                android:inputType="textPassword" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_get"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:text="花费"
            android:textColor="#A8A8A8"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/lay_cost"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/txt_cost"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/china" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_askedit"
                android:ems="10"
                android:inputType="textPassword" />
        </RelativeLayout>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:text="汇率"
            android:textColor="#A8A8A8"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/lay_rate"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/textView3"
                android:text="="
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/textView6"
                android:text="￥"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/textView5"
                android:text="6.3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/textView1"
                android:text="美元"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:alpha="0.8"
                android:background="@drawable/shape_askbtn"
                android:text="继续交易"
                android:textColor="#23238E"
                android:textSize="22sp" />
        </RelativeLayout>
    </LinearLayout>
    
    <com.exchange.yes.dep.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/background"
        fab:fab_addButtonColorPressed="@color/blue_semi_transparent_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="个人中心"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="商城"
            fab:fab_colorPressed="@color/white_pressed"/>
        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="市场信息"
            fab:fab_colorPressed="@color/white_pressed"/>
        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_qexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="快速交易"
            fab:fab_colorPressed="@color/white_pressed"
            android:visibility="gone" />
         <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_cexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="自定义交易"
            fab:fab_colorPressed="@color/white_pressed"
            android:visibility="gone" />

    </com.exchange.yes.dep.FloatingActionsMenu>
    
</RelativeLayout>