<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     >

    <RelativeLayout
        android:id="@+id/head_ask_quick"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="#0080FF"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0080FF"
            android:src="@drawable/ic_action_new" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的订单"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body_ask_quick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_ask_quick"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/card_showorder_quidk"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_order" >

            <RelativeLayout
                android:id="@+id/lay_get"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_below="@+id/txt_dedao"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_askedit"
                android:orientation="vertical" >

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/spinner"
                    android:ems="10"
                    android:inputType="textPassword" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_dedao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lay_get"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="得到"
                android:textColor="#A8A8A8"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/lay_rate"
                android:layout_width="150dp"
                android:layout_height="29dp"
                android:layout_alignLeft="@+id/txt_cost"
                android:layout_alignRight="@+id/lay_get"
                android:layout_below="@+id/lay_cost"
                android:layout_marginTop="47dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:text="1"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/textView4"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="美元"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="11dp"
                    android:text="￥"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/textView5"
                    android:text="6.3"
                    android:textSize="25sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/lay_cost"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:text="="
                android:textSize="40sp" />

            <TextView
                android:id="@+id/txt_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lay_get"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/lay_get"
                android:layout_marginTop="31dp"
                android:text="花费"
                android:textColor="#A8A8A8"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/lay_cost"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_alignRight="@+id/lay_rate"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_askedit"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:ems="10" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/china" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_confirmorder_quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_showorder_quidk" 
             android:layout_alignParentBottom="true">

			 <com.gc.materialdesign.views.ButtonFlat
			    android:id="@+id/btn_finish_quickDeal"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:text="提交订单" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>