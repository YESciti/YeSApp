<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     tools:context=".OrderActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/ly2"
            android:layout_width="match_parent"
            android:layout_height="399dp"
            android:layout_marginTop="5dp" >

            <RelativeLayout
                android:id="@+id/ly2"
                android:layout_width="285dp"
                android:layout_height="380dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_order" >

                <RelativeLayout
                    android:id="@+id/lay_get"
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/txt_dedao"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_askedit"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="16dp" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/spinner"
                        android:ems="10"
                        android:inputType="textPassword" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_dedao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lay_get"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:text="得到"
                    android:textColor="#A8A8A8"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/lay_rate"
                    android:layout_width="150dp"
                    android:layout_height="29dp"
                    android:layout_alignLeft="@+id/txt_cost"
                    android:layout_alignRight="@+id/lay_get"
                    android:layout_below="@+id/lay_cost"
                    android:layout_marginTop="47dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:text="1"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView4"
                        android:layout_toRightOf="@+id/textView1"
                        android:text="美元"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="11dp"
                        android:text="￥"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="13dp"
                        android:layout_toLeftOf="@+id/textView5"
                        android:text="6.3"
                        android:textSize="25sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_below="@+id/lay_cost"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:text="="
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txt_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lay_get"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/lay_get"
                    android:layout_marginTop="31dp"
                    android:text="花费"
                    android:textColor="#A8A8A8"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/lay_cost"
                    android:layout_width="250dp"
                    android:layout_height="55dp"
                    android:layout_alignRight="@+id/lay_rate"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_askedit"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:ems="10" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/china" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.28" >

            <Button
                android:id="@+id/button1"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_askbtn"
                android:text="提交订单"
                android:textColor="#5E5E5E"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:background="#0080FF"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0080FF"
            android:src="@drawable/ic_action_new" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的订单"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </RelativeLayout>

</RelativeLayout>