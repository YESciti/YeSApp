<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="129dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="128dp"
            android:background="#01579b"
            android:paddingBottom="20dp"
            android:paddingLeft="104dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="我是图"
                android:textColor="#FFF"
                android:textSize="25dp" />
            
        </RelativeLayout>
        
        
   </RelativeLayout>
   
     <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#1E88E5" />

    <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/itemButtons"
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:background="#FFF"
        android:clickable="true" >

        <Spinner
            android:id="@+id/spinner_Iwant1"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_Iwant1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/edit_Iwant1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_Iwant1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="我要"
            android:textSize="30dp" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#1E88E5" />

        <EditText
            android:id="@+id/edit_Iwant1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </com.gc.materialdesign.views.LayoutRipple>

    <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/LayoutRipple01"
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:background="#FFF"
        android:clickable="true" >

        <EditText
            android:id="@+id/Edit_Ihave"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10" />

        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Edit_Ihave"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/Edit_Ihave"
            android:text="我有"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/Spinner_Ihave1"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Edit_Ihave"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/Edit_Ihave" />

    </com.gc.materialdesign.views.LayoutRipple>
<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="72dp" >

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#1E88E5"      
                android:text="确认订单" />
        </RelativeLayout>
  
        </LinearLayout>