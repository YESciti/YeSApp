<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ray_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/relabar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="#01579b"
        android:paddingLeft="104dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"            
            android:text="交易状态"
            android:textColor="#FFF"
            android:textSize="20sp" />
    </RelativeLayout>
    	

    <RelativeLayout
        android:id="@+id/lay0"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/relabar"
        android:background="#FFFFFF" >

        <RelativeLayout
            android:id="@+id/lay0.1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#ffffff" >

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/ImageView01"
                android:gravity="center_vertical"
                android:text="订单发送成功"
                android:textSize="16sp" 
                />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="#B3E5FC" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/TextView01"
                android:layout_alignParentBottom="true"
                android:background="#01579b" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay0.2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/lay0.1"
            android:background="#B3E5FC"
            android:gravity="center" >

        <TextView
            android:id="@+id/Text_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46dp"
            android:text="13：01"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Textlay1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="33dp"
            android:gravity="center_vertical"
            android:text="您的交易订单发送成功"
            android:textSize="14sp" />
            
        </RelativeLayout>
        

    </RelativeLayout>
    <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lay0.2"
            android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/lay0" >

        <RelativeLayout
            android:id="@+id/lay2.1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#B3E5FC" >

            <TextView
                android:id="@+id/txt_huilv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/imageView1"
                android:gravity="center_vertical"
                android:text="交易成功"
                android:textSize="16sp" 
                 />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/txt_huilv"
                android:layout_alignParentBottom="true"
                android:background="#01579b" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="#B3E5FC"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay2.2"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_below="@+id/lay2.1"
            android:background="#B3E5FC" >

            <TextView
                android:id="@+id/txt_benbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView_waibi_edit"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:text="共计获得50美元"
                android:textSize="14sp" />
  <TextView
            android:id="@+id/Text_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46dp"
            android:text="13：01"
            android:textSize="16sp" />

  <TextView
      android:id="@+id/textView_waibi_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/Text_time2"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="42dp"
      android:text="您的订单完成交易"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
     <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lay0.2"
            android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/lay2" >

        <RelativeLayout
            android:id="@+id/lay3.1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:background="#B3E5FC" >

            <TextView
                android:id="@+id/txt_jine"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/imageView1"
                android:gravity="center_vertical"
                android:text="交易详情"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/txt_jine"
                android:layout_alignParentBottom="true"
                android:background="#01579b" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="#B3E5FC" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay3.2"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_below="@id/lay3.1"
            android:background="#B3E5FC" >

            <TextView
                android:id="@+id/textlay3.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toLeftOf="@+id/textView3"
                android:text="6.2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textlay3.1"
                android:layout_alignBottom="@+id/textlay3.1"
                android:layout_centerHorizontal="true"
                android:text="成交"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />
            
            
            <TextView
            android:id="@+id/Text_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="46dp"
            android:text="13：01"
            android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/Text_time3"
                android:text="50美元未成交，正在等待交易"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Text_time3"
                android:layout_toLeftOf="@+id/textlay3.1"
                android:text="50美元以汇率"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>
    
     <View
            android:id="@+id/view3"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lay0.2"
            android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/lay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/lay3"
         >

          <com.gc.materialdesign.views.ButtonFlat
              android:id="@+id/btn_submitcontin"
              android:layout_width="100dp"
              android:layout_height="60dp"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_marginRight="40dp"
              android:text="继续交易" >
          </com.gc.materialdesign.views.ButtonFlat>

          <com.gc.materialdesign.views.ButtonFlat
              android:id="@+id/btn_submitresult"
              android:layout_width="100dp"
              android:layout_height="60dp"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="40dp"
              android:text="确认结果" >
          </com.gc.materialdesign.views.ButtonFlat>

    </RelativeLayout>

</LinearLayout>