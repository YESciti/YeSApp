<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"     
    android:layout_height="match_parent">
<ScrollView     
         android:id="@+id/myscroll"      
         android:layout_width="match_parent"     
         android:layout_height="match_parent"
         android:layout_weight="1.0" > 

<RelativeLayout
    android:background="#ffffff"    
    android:layout_width="match_parent"
    android:layout_height="1000sp" >
 
   <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="fill_parent"
        android:layout_height="56dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#1E88E5" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="外币交易市场"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:visibility="visible" />
       
            
        </RelativeLayout>    
	<View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
             android:layout_alignParentBottom="true"
            android:background="#88CECECE" />
    </RelativeLayout>
<com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/introduce"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff"
        android:layout_below="@+id/titles"
        android:clickable="true" >
	 	

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
             android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="产品介绍部分" />
        
         <View
            android:layout_width="fill_parent"
            android:layout_height="10sp"
            android:background="#88CECECE"
            android:layout_alignParentBottom="true" />
      
    </com.gc.materialdesign.views.LayoutRipple>
  <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/introduce"
            
            android:background="#88CECECE" />
	
 <RelativeLayout
        android:id="@+id/spinnerlayout"
        android:layout_width="fill_parent"
        android:layout_height="115sp"
        android:layout_below="@+id/introduce" >

     <View
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:layout_alignBottom="@+id/textView1"
         android:layout_alignParentLeft="true"
         android:background="#1E88E5" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:text="请选择要查看的币种"
         android:textSize="16sp" />
     
     <View
         	android:id="@+id/view11"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/cur_spinner"
            android:background="#88CECECE" />
 <RelativeLayout
    android:layout_width="match_parent"
     android:layout_below="@+id/view11"
    android:id="@+id/TradeListItem"
     android:layout_height="1dp" 
     android:background="#88CECECE" >


<TextView
    android:id="@+id/listview_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text=""
    android:textColor="#000000"
    android:textSize="1dp" />
<TextView
    android:id="@+id/listview_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="24dp"
    android:text=""
    android:textColor="#000000"
    android:textSize="1dp" />

<TextView
    android:id="@+id/listview_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="26dp"
    android:textColor="#000000"
    android:text=""
    android:textSize="1dp" />

</RelativeLayout>

 <Spinner
     android:id="@+id/cur_spinner"
     android:layout_width="150sp"
     android:layout_height="50dp"
     android:layout_marginLeft="20sp"
     
     android:layout_centerVertical="true" />

 <com.gc.materialdesign.views.ButtonRectangle
     android:id="@+id/btn_fresh"
     android:layout_width="100sp"
     android:layout_height="50dp"
     android:layout_alignParentRight="true"
     android:layout_alignTop="@+id/cur_spinner"
     android:background="#fffffe"
     android:text="刷新"
     android:textColor="#000000" >
 </com.gc.materialdesign.views.ButtonRectangle>

 </RelativeLayout>

 
 
  	
    


 
    
	<View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/spinnerlayout"
            android:background="#88CECECE" />	
   <com.gc.materialdesign.views.LayoutRipple
        android:id="@+id/listvi"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/spinnerlayout"
        android:background="#ffffff"
        android:clickable="true" >
    	<View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            
            android:background="#88CECECE" />	
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=" 外币价格走势 " /> 
        <View
            android:layout_width="fill_parent"
            android:layout_height="10sp"           
            android:background="#88CECECE" />	
    </com.gc.materialdesign.views.LayoutRipple> 
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_below="@+id/listvi"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        
       />
    
    <View
         	android:id="@+id/view11"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/chart1"
            android:background="#88CECECE" />
 <RelativeLayout
    android:layout_width="match_parent"
     android:layout_below="@+id/view11"
    android:id="@+id/TradeListItem2"
     android:layout_height="23sp"  >


<TextView
    android:id="@+id/listview_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:text="数量"
    android:textColor="#000000"
    android:textSize="16sp" />
<TextView
    android:id="@+id/listview_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="24dp"
    android:text="汇率"
    android:textColor="#000000"
    android:textSize="16sp" />

<TextView
    android:id="@+id/listview_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="26dp"
    android:textColor="#000000"
    android:text="买卖"
    android:textSize="16sp" />

</RelativeLayout>
    
    
<FrameLayout
        android:layout_width="match_parent"
       android:layout_below="@+id/TradeListItem2"
        android:layout_height="300sp"
        android:id="@android:id/tabcontent" 
        >
</FrameLayout>
  </RelativeLayout> 



</ScrollView> 

<com.exchange.yes.dep.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom ="true"
        android:layout_alignParentRight="true"
       
        fab:fab_addButtonColorNormal="@color/background"
        fab:fab_addButtonColorPressed="@color/blue_semi_transparent_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_icon="@drawable/icn_select_color"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_addButtonSize="mini"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp">

        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="个人中心"            
            fab:fab_icon="@drawable/icn_widget"

            fab:fab_colorPressed="@color/white_pressed"/>

        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_icon="@drawable/icn_switch"
            fab:fab_title="商城"

            fab:fab_colorPressed="@color/white_pressed"/>
      
        <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_qexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="快速交易"

            fab:fab_colorPressed="@color/white_pressed"
            android:visibility="gone" />
         <com.exchange.yes.dep.FloatingActionButton
            android:id="@+id/action_cexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_icon="@drawable/icn_button"
            fab:fab_title="自定义交易"
            fab:fab_colorPressed="@color/white_pressed"
            android:visibility="gone" />

    </com.exchange.yes.dep.FloatingActionsMenu>
    </RelativeLayout>