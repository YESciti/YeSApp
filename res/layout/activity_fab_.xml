<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="#1E88E5"
                android:text="我是主页君" />
   
<floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/background"
        fab:fab_addButtonColorPressed="@color/blue_semi_transparent_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <floatingactionbutton.FloatingActionButton
            android:id="@+id/action_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="个人中心"
            fab:fab_colorPressed="@color/white_pressed"/>

        <floatingactionbutton.FloatingActionButton
            android:id="@+id/action_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="商城"
            fab:fab_colorPressed="@color/white_pressed"/>
        <floatingactionbutton.FloatingActionButton
            android:id="@+id/action_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="市场信息"
            fab:fab_colorPressed="@color/white_pressed"/>
        <floatingactionbutton.FloatingActionButton
            android:id="@+id/action_qexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="快速交易"
            fab:fab_colorPressed="@color/white_pressed"
            android:visibility="gone" />
         <floatingactionbutton.FloatingActionButton
            android:id="@+id/action_cexchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="自定义交易"
            fab:fab_colorPressed="@color/white_pressed"
            android:visibility="gone" />"

    </floatingactionbutton.FloatingActionsMenu>



</RelativeLayout>
