<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login"
    android:orientation="vertical" >

    <!-- #F2F2F0 @drawable/back_ground -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_logedit"
            android:ems="10"
            android:hint="用户名"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp" >


        <EditText
            android:id="@+id/editText2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_logedit"
            android:ems="10"
            android:hint="密码"
            
            android:inputType="textPassword" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35" >

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_logbtn"
            android:text="登录" 
            android:textSize="25sp"
            android:textColor="#90FFFFFF"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_get"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@+id/txt_get"
            android:text="忘记密码" 
            android:textColor="#BFBFBF"/>

        <TextView
            android:id="@+id/txt_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btnlogin"
            android:layout_below="@+id/btnlogin"
            android:layout_marginRight="46dp"
            android:text="立即注册" 
            android:textColor="#BFBFBF"/>

    </RelativeLayout>

</LinearLayout>